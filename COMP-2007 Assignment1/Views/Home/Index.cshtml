@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Anime Show Listings</h1>
    <p class="lead">View, add, edit, and delete shows, including raiting.</p>
    <p><a class="btn btn-primary btn-lg" @Html.ActionLink("Browse Now", "Index", "Series")</a></p>
</div>

